<div class="col-sm-4 blog-sidebar">
    {% if cpc %}
    <div class="sidebar-module ad">
        <a href="#" title="cpc">
            <img src="{{ asset('bundles/main/img/ad.png') }}" alt="">
        </a>
    </div>
    {% endif %}
    {% for entity in specials %}
        {% if loop.index == 1 %}
            <div class="sidebar-module">
                <h4>{{ entity.name }}</h4>
                {% for article in entity.articles %}
                <div class="sidebar-half">
                    <div class="sidebar-img">
                        <a href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ article.url }}" title="{{ article.title }}">
                            <img src="{{ asset('uploads/article/145x145/') }}s_{{ article.image }}" alt="{{ article.title }}">
                        </a>
                    </div>
                    <a href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ article.url }}" title="{{ article.title }}">{{ article.title }}</a>
                </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="sidebar-module">
                <h4>{{ entity.name }}</h4>
                {% for article in entity.articles %}
                <div class="sidebar-full">
                    <div class="sidebar-img">
                        <a href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ article.url }}" title="{{ article.title }}">
                            <img src="{{ asset('uploads/article/300x300/') }}m_{{ article.image }}" alt="{{ article.title }}">
                        </a>
                    </div>
                    <div class="sidebar-description">
                        <a href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ article.url }}" title="">{{ article.title }}</a>
                        <p class="sidebar-date-time">{{ article.datecreate|date('d/m/Y') }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% endif %}
    {% endfor %}

    <div class="sidebar-module view-best">
        <h4>TIN XEM NHIỀU NHẤT</h4>
        <ul class="sidebar-best">
            {% for view in viewBests %}
            <li><a href="{{ app.request.schemeAndHttpHost }}{{ app.request.getBaseURL() }}/{{ view.url }}" title="{{ view.title }}">{{ view.title }}</a></li>
            {% endfor %}
        </ul>
    </div>
</div><!-- /.blog-sidebar -->